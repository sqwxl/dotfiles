    position top
    height 20
    strip_workspace_numbers yes

    status_command ~/.config/sway/status.sh

    colors {
        background $darker
        statusline $lightest
        separator $light

        focused_workspace $lightest $lightest $darker
        urgent_workspace $white $red $lightest
        inactive_workspace $darker $darker $grey
